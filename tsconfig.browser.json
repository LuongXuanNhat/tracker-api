{
  "compilerOptions": {
    "target": "ES2018",
    "module": "None",
    "moduleResolution": "node",
    "declaration": false,
    "outFile": "./browser/tracker-api-bundle.js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "removeComments": true,
    "allowJs": true,
    "lib": ["ES2018", "DOM"]
  },
  "include": ["src/browser.ts"],
  "exclude": ["node_modules", "dist"]
}
